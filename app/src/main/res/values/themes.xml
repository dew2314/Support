<!-- themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- MaterialComponents의 기본 애플리케이션 테마 -->
    <style name="Base.Theme.Support" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 이곳에서 테마를 사용자화할 수 있습니다 -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="windowActionBar">false</item> <!-- 기본 액션바 비활성화 -->
        <item name="windowNoTitle">true</item> <!-- 타이틀 바 제거 -->
    </style>

    <!-- TextInputLayout에 대한 사용자 정의 스타일 -->
    <style name="CustomTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#BFBFBF</item> <!-- 테두리 색상 -->
        <item name="boxStrokeWidth">1dp</item> <!-- 테두리 두께 -->
    </style>

    <!-- TextInputEditText에 대한 사용자 정의 스타일 -->
    <style name="CustomTextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">#BFBFBF</item> <!-- 텍스트 색상 -->
    </style>

    <!-- 추가 애플리케이션 테마 -->
    <style name="Theme.Support" parent="Base.Theme.Support">
        <!-- 여기에 추가 테마 사용자화를 추가하세요 -->
    </style>

    <!-- Navigation Drawer 아이템 배경 스타일 -->
    <style name="NavDrawerItemStyle">
        <item name="android:background">#FFFFFF</item> <!-- 항목 배경색 설정 -->
    </style>



</resources>
